   <%= link_to 'Back', products_path, class: "page-btn m-5 mb-0 dashboard-btn" %>
  </div>
<div class="dashboard-container darkgreen-color">

  <%= link_to "I'm Renting", '#renting', class: "page-btn m-5 mt-0 mb-1 dashboard-btn btn-middle" %>
  <%= link_to "My Rentals", '#rentals', class: "page-btn m-5 mt-0 mb-1 dashboard-btn btn-middle" %>


  <br>
  <br>
  <h2 id="renting" class="text-center"><strong>I'm Renting:</strong></h2>
  <br>
  <div class="dashboard-cards">
    <% @bookings.each do |booking| %>

      <div class="card-product card-booking fw-bolder p-0">
        <% if booking.product.photo.attached? %>
          <%= cl_image_tag booking.product.photo.key, height: 300, width: 300, crop: :fill, class: "main-img" %>
        <% end %>

        <div class="card-product-infos index-card-product-infos py-0">

          <div class="align-self-center">

            <h4 class="fw-bolder"><%= booking.product.name.capitalize %></h4>
            <h2 class="fw-bolder"><strong class="fs-5 lh-base">Booked...</strong></h2>
            <h2 class="fw-bolder"><strong class="fs-5 lh-base">From:</strong> <%= booking.start_date %></h2>
            <h2 class="fw-bolder"><strong class="fs-5 lh-base">To:</strong> <%= booking.end_date %></h2>

            <div class="ps-5">
              <%= link_to "Cancel Booking", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary ms-5 mt-2 p-1" %>
            </div>

          </div>

        </div>

      </div>

    <% end %>
  </div>

  <br>
  <br>
  <h2 id="rentals" class="text-center"><strong>My Rentals:</strong></h2>
  <br>
  <div class="dashboard-cards">
    <% @products_bookings.each do |booking| %>

      <div class="card-product card-booking fw-bolder p-0">
        <% if booking.product.photo.attached? %>
          <%= cl_image_tag booking.product.photo.key, height: 300, width: 300, crop: :fill, class: "main-img" %>
        <% end %>

        <div class="card-product-infos index-card-product-infos py-0">

          <div class="align-self-center">
            <h4 class="fw-bolder"><%= booking.product.name.capitalize %></h4>
            <h2 class="fw-bolder"><strong class="fs-5 lh-base">Booked...</strong></h2>
            <h2 class="fw-bolder"><strong class="fs-5 lh-base">From:</strong> <%= booking.start_date %></h2>
            <h2 class="fw-bolder"><strong class="fs-5 lh-base">To:</strong> <%= booking.end_date %></h2>

            <div class="ps-5">
              <%= link_to "Cancel Booking", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary ms-5 mt-2 p-1" %>
            </div>

          </div>

        </div>

      </div>

    <% end %>
  </div>


</div>
