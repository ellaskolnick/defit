<div class="white-background relative">
  <br>
  <br>
  <div>
   <%= link_to 'Back', products_path, class: "page-btn m-5" %>
  </div>
  <div class="show">

    <div>
      <div class="show show-product pt-0">

          <div>
            <% if @product.photo.attached? %>
              <%= cl_image_tag @product.photo.key, height: 700, width: 500, crop: :fill, class: "main-img" %>
            <% end %>
          </div>
          <div class="m-0 ms-4 darkgreen-color">
            <div class="category-box rent-form m-0 p-5">
              <h2 class="m-0 fw-bolder"><%= @product.name.capitalize %></h2>
              <br>
              <h6><strong>Description:</strong> <%= @product.description %></h6>
              <br>
              <h6><strong>Location:</strong> <%= @product.location.capitalize %></h6>
              <br>
              <h6><strong>Category:</strong> <%= @product.category %></h6>
              <% if @product.category == "Clothing" %>
                <h6><strong>Size:</strong> <%= @product.size %></h6>
              <% end %>
              <br>
              <br>
              <div class="d-flex justify-content-end">
                <h5><strong>Price:</strong> Â£<%= number_with_precision(@product.price, precision: 2) %></h5>
              </div>
              <br>
              <div class="d-flex justify content-end">
                 <%= link_to "Rent Now", '#rent', class: "text-decoration-none page-btn long" %>
              </div>
              <br>
              <%# <% if @user == current_user %>
                <%= link_to edit_product_path(@product.id), class: "darkgreen-color" do %>
                  <i class="far fa-edit"></i>
                <% end %>
                <%= link_to product_path(@product), method: :delete, data: { confirm: "Are you sure?" }, class: "darkgreen-color" do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              <%# <% end %>
            </div>
            <div class="d-flex justify-content-end m-0">
              <div class="rent-form m-0 mt-3 stick" id="rent">
                <h3 class="fw-bolder">Rent</h3>
                <%= simple_form_for [@product, @booking] do |f| %>
                  <%= f.input :start_date %>
                  <%= f.input :end_date %>
                  <%= f.button :submit, "Rent Now", class: "page-btn long" %>
                <% end %>
              </div>
            </div>
          </div>

           <div class="map-box" style="width: 100%; height: 600px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

      </div>

